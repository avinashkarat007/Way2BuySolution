<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Way2Buy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>

</head>
<body>
    <div class="container-fluid">
        <div class="jumbotron">
            <h1>Way2Buy</h1>
            <p class="lead">Buy everything under sun!</p>

        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            @Html.ActionLink("Categories", "Index", "Category", null,
                            new { @class = "btn btn-block btn-info btn-lg" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col">
                            @Html.ActionLink("Products", "Index", "Product", null,
                            new { @class = "btn btn-block btn-info btn-lg" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Way2Buy</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
